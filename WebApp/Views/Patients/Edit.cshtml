@model WebApp.Models.Patient

<h2>Hasta Güncelle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Ad Soyad</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Yaş</label>
        <input asp-for="Age" class="form-control" type="number" />
    </div>

    <div class="form-group">
        <label>Hastalık / Şikayet</label>
        <input asp-for="Disease" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">İptal</a>
</form>
