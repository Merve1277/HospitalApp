@model WebApp.Models.Patient

<h2>Hasta Sil</h2>

<h4>Bu hastayı silmek istediğinizden emin misiniz?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Ad Soyad</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Yaş</dt>
    <dd class="col-sm-10">@Model.Age</dd>

    <dt class="col-sm-2">Hastalık</dt>
    <dd class="col-sm-10">@Model.Disease</dd>

    <dt class="col-sm-2">Kayıt Tarihi</dt>
    <dd class="col-sm-10">@Model.CreatedAt</dd>
</dl>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
